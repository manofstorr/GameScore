{% if plays %}
    <h5>{% if limitOfPlayedGamesShown is defined %}
            {{ limitOfPlayedGamesShown }}
        {% endif %}
        {{ 'Last played games'|trans|capitalize }} :</h5>

    {% for play in plays %}
        <ul class="list-group">
            <li class="list-group-item list-group-item-info">
                <a href="{{ path('game_score_game_view', {'id':play.game.id}) }}">{{ play.game.name }}</a>
                <a class="btn btn-warning btn-xs pull-right"
                   href="{{ path('game_score_play_update', {'id': play.playid}) }}">
                    {{ 'upd'|trans|capitalize }} {{ 'play'|trans }}
                </a>
            </li>
            <li class="list-group-item inactive">
                {{ play.description }} @ {{ play.location }}
                , {{ play.date|date("d M Y") }},
                {{ play.nbPlayers }} joueurs :
            </li>
            {% if play.nbPlayers > 0 %}
                {% for player in play.player %}
                    <a class="list-group-item" href="{{ path('game_score_player_view', {'id': player.id}) }}">
                        {{ player.firstname }} {{ player.lastname }}
                        {% if loop.first %}
                            <span class="label label-success">{{ player.score }}</span>
                        {% else %}
                            <span class="label label-info">{{ player.score }}</span>
                        {% endif %}
                        <i class="fa fa-chevron-right pull-right" aria-hidden="true"></i>
                    </a>
                {% endfor %}
            {% endif %}
        </ul>
    {% endfor %}

    {% if nbOfPage is defined %}
        <ul class="pagination">
            {% for p in range(1, nbOfPages) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('game_score_player_view', {'id': player.id}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

{% endif %}