{% extends "GameScoreBundle::layout.html.twig" %}

{% block title %}
    {{ 'score' |trans|capitalize }} : {{ 'form' |trans|capitalize }} - {{ parent() }}
{% endblock %}

{% block gamescore_body %}
    <h2>{{ 'form' |trans|capitalize }} : {{ 'score' |trans|capitalize }}</h2>

    <p>
        {{ play.date|date("d/m/Y") }} : {{ play.game.name }}
    </p>


    <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">
            {{ form_label(form.player, "Player : ", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.player) }}
            <div class="col-sm-10">
                {{ form_widget(form.player, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.score, "Score : ", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.score) }}
            <div class="col-sm-10">
                {{ form_widget(form.score, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                {{ form_widget(form.save_and_declare_other_players, {'attr': {'class': 'btn btn-secondary'}}) }}
                {{ form_widget(form.save_and_stop, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>

        <div class="form-group form-hidden-group">
            {{ form_widget(form.play) }}
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}

