{% extends "GameScoreBundle::layout.html.twig" %}

{% block title %}
    Editeurs : Formulaire - {{ parent() }}
{% endblock %}

{% block rightside %}
    Editeurs populaires :
{% endblock %}

{% block mainsection %}
    <h2>Editeurs</h2>

    <div class="well">
        <legend>Enregistrer ou mettre à jour un éditeur :</legend>
        {{ form_start(form) }}

        <div class="form-group">
            <label for="name" class="control-label">
                {{ form_label(form.name, 'name'|trans|capitalize) }}
            </label>
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>

        <div class="form-group">
            <div>
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary '}}) }}
            </div>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>

{% endblock %}

