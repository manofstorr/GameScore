{% extends "GameScoreBundle::layout.html.twig" %}

{% block title %}
    Auteurs : Formulaire - {{ parent() }}
{% endblock %}

{% block mainsection %}
    <section class="col-md-8 col-md-offset-2 ">

        <label class="label label-xs label-gamescore-default"><span
                    class="glyphicon glyphicon-education"></span> {{ 'author'|trans|upper }}</label>
        <div class="well">
            <h2>{{ 'form' |trans|capitalize }} : {{ 'author' |trans|capitalize }}</h2>
        </div>

        <div class="well">
            {{ form_start(form) }}

            <div class="form-group">
                <label for="firstname" class="control-label">
                    {{ form_label(form.firstname, 'firstname'|trans|capitalize) }}
                </label>
                {{ form_errors(form.firstname) }}
                {{ form_widget(form.firstname) }}
            </div>

            <div class="form-group">
                <label for="lastname" class="control-label">
                    {{ form_label(form.lastname, 'lastname'|trans|capitalize) }}
                </label>
                {{ form_errors(form.lastname) }}
                {{ form_widget(form.lastname) }}
            </div>

            <div class="form-group">
                <div>
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}

