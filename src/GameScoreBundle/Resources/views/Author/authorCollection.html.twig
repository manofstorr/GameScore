{% extends "GameScoreBundle::layout.html.twig" %}


{% block title %}
    Auteurs : Collection - {{ parent() }}
{% endblock %}

{% block gamescore_body %}
    <h2>Auteurs : collection</h2>
    <p>
        <a href="{{ path('game_score_create_author') }}">Nouvel auteur</a>
    </p>
    <ul>
        {% for author in authorCollection %}
            <li>
                {{ author.firstname ~ ' ' ~ author.lastname }}
                -
                <a href="{{ path('game_score_view_author', { 'author_id':author.id }) }}">Fiche</a>
                -
                <a href="{{ path('game_score_update_author', { 'author_id':author.id }) }}">Maj</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}