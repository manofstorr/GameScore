{% extends "GameScoreBundle::layout.html.twig" %}


{% block title %}
    Games Collection - {{ parent() }}
{% endblock %}

{% block gamescore_body %}
    <h2>Games collection</h2>
    <p><a href="{{ path('game_score_create_game') }}">Nouveau jeu</a></p>
    <ul>
        {% for game in gameCollection %}
            <li>
                {{ game.name }}
                {% if game.author %}
                    <br />
                    Auteur(s) :
                    {% for author in game.author %}
                        {{ author.firstname }} {{ author.lastname }}
                    {% endfor %}
                {% endif %}
                <br />
                <a href="{{ path('game_score_view_game', {'game_id':game.id}) }}">Fiche</a>
                 - <a href="{{ path('game_score_update_game', {'game_id':game.id}) }}">Maj</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}