{% extends "GameScoreBundle::layout.html.twig" %}

{% block title %}
    Games Collection - {{ parent() }}
{% endblock %}

{% block rightside %}
    Jeux populaires :
{% endblock %}

{% block mainsection %}
    <section class="col-md-12">
        <h2>{{ 'games collection'|trans|capitalize }}
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-primary pull-right"
                   href="{{ path('game_score_game_create') }}">{{ 'new'|trans|capitalize }}</a>
            {% endif %}
        </h2>
        <ul class="pagination">
            {% for p in alphapageArray %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('game_score_game_collection', {'page': p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
        {% for game in gameCollection %}
            {% include 'GameScoreBundle:Game:gameIncluded.html.twig' with {'game' : game } %}
        {% endfor %}
    </section>
{% endblock %}