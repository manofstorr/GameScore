{% if plays %}
    <div class="panel panel-info">
        <div class="panel-heading">
            {% if limitOfPlayedGamesShown is defined %}
                {{ limitOfPlayedGamesShown }}
            {% endif %}
            {{ 'Last played games'|trans|capitalize }} :
        </div>
        <ul class="list-group">
            {% for play in plays %}
                <li class="list-group-item">
                    <h4>
                        <a href="{{ path('game_score_game_view', {'game_id':play.game.id}) }}">{{ play.game.name }}</a>
                    </h4>
                    <p class="text-muted">{{ play.description }} @ {{ play.location }}
                        , {{ play.date|date("d M Y") }},
                        {{ play.nbPlayers }} joueurs
                    </p>
                    <ul class="alternate">
                        {% for player in play.player %}
                            <li class="list-unstyled">
                                {{ player.firstname }} {{ player.lastname }}
                                <a href="{{ path('game_score_player_view', {'id': player.id}) }}" class="small">voir</a>
                                <span class="badge badge-inverse pull-right">{{ player.score }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            {% endfor %}
        </ul>
    </div>
    {% if nbOfPage is defined %}
        <ul class="pagination">
            {% for p in range(1, nbOfPages) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('game_score_player_view', {'id': player.id}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endif %}