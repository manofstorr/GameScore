{% extends "GameScoreBundle::layout.html.twig" %}


{% block title %}
    Auteurs : Collection - {{ parent() }}
{% endblock %}

{% block rightside %}
    Auteurs populaires :
{% endblock %}

{% block mainsection %}
    <h2>Auteurs : collection</h2>
    <p>
        <a href="{{ path('game_score_author_create') }}">Nouvel auteur</a>
    </p>
    <ul>
        {% for author in authorCollection %}
            <li>
                {{ author.firstname ~ ' ' ~ author.lastname }}
                -
                <a href="{{ path('game_score_author_view', { 'author_id':author.id }) }}">Fiche</a>
                -
                <a href="{{ path('game_score_author_update', { 'author_id':author.id }) }}">Maj</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}