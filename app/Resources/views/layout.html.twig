<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %} GameScore {% endblock %}</title>
    {% block stylesheets %}
        {% stylesheets
        filter='cssrewrite'
        'bundles/gamescore/css/bootstrap.min.css'
        'bundles/gamescore/css/overload.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
        {% endstylesheets %}
    {% endblock %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
{% for message in app.session.flashbag.get('info') %}
    <div class="alert alert-info fade in">
        <a href="#" class="close" data-dismiss="alert">×</a>
        {{ message }}
    </div>
{% endfor %}
<nav class="navbar navbar-header">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        Connecté en tant que {{ app.user.username }}
        -
        <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
    {% else %}
        <a href="{{ path('fos_user_security_login') }}">Connexion</a>
    {% endif %}
</nav>
<div id="header" class="jumbotron">
    <div class="container">
        <h1>Game scores</h1>
        <p>Propelled by Symfony 3</p>
    </div>
</div>

<div class="container">
    <nav class="navbar">
        <ul class="nav nav-pills nav-stacks">
            <li><a class="btn btn-default active" href="{{ path('game_score_homepage') }}">Home</a></li>
            <li><a class="btn btn-default" href="{{ path('game_score_game_collection', {page: 'A'}) }}">Les jeux<span
                            class="badge">97</span></a></li>
            <li><a class="btn btn-default" href="{{ path('game_score_author_collection') }}">Les auteurs</a></li>
            <li><a class="btn btn-default" href="{{ path('game_score_editor_collection', {page: 1}) }}">Les éditeurs</a>
            </li>
            <li><a class="btn btn-default" href="{{ path('game_score_player_collection', {page: 'a'}) }}">Les
                    joueurs</a>
            </li>
            <li><a class="btn btn-default" href="{{ path('user_collection') }}">Les utilisateurs</a>
            </li>
        </ul>
    </nav>
    <div id="content" class="col-md-9">
        {% block body %}
        {% endblock %}
    </div>
</div>
<hr/>
<footer>
    <p>Copyright {{ 'now'|date('Y') }} - enviro {{ app.environment|upper }}</p>
</footer>

</body>
</html>