{% extends "GameScoreBundle::general.layout.html.twig" %}

{% block title %}
    Welcome - {{ parent() }}
{% endblock %}

{% block mainsection %}
    <div class="row">
        <div class="col-md-12">
            <h1>Stats : MostPlayed >Jeux les plus jou√©s</h1>
            <ul>
                {% for game in games %}
                    <li class="list-group-item">
                        <a href="{{ path('game_score_game_view', { 'id':game.id }) }}">{{ game.name }}</a> : {{ game.C }}
                        <div id="square" style="height: 10px; width: {{ game.C * 5 }}px; background: cornflowerblue; "></div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
