{% extends "GameScoreBundle::layout.html.twig" %}

{% block title %}
    Document - {{ parent() }}
{% endblock %}

{% block mainsection %}
    <section class="col-md-8 col-md-offset-2 ">
        <label class="label label-xs label-gamescore-default"><span
                    class="glyphicon glyphicon-eye"></span> {{ 'upload'|trans|upper }}</label>
        <div class="well">
            <h2>{{ 'form' |trans|capitalize }} : {{ 'upload' |trans|capitalize }}</h2>
        </div>

        <div class="well">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_rest(form) }}
            <input type="submit" value="Upload Document" />
            {{ form_end(form) }}
    </section>
{% endblock %}






