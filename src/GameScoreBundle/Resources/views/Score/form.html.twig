{% extends "GameScoreBundle::layout.html.twig" %}

{% block title %}
    {{ 'score' |trans|capitalize }} : {{ 'form' |trans|capitalize }} - {{ parent() }}
{% endblock %}

{% block rightside %}
    ?
{% endblock %}

{% block mainsection %}
    <h2>{{ 'play'|trans|capitalize }} {{ 'of'|trans }} {{ play.game.name }}</h2>
    {% include 'GameScoreBundle:Play:playedGamesIncluded.html.twig' with {'plays' : plays } %}
    <div class="well">
        <legend>{{ 'add a score'|trans|capitalize }} :</legend>
        {{ form_start(form) }}

        <div class="form-group">
            <label for="player" class="control-label">
                {{ form_label(form.player, 'player'|trans|capitalize) }}
            </label>
            {{ form_errors(form.player) }}
            {{ form_widget(form.player) }}
        </div>

        <div class="form-group">
            <label for="score" class="control-label">
                {{ form_label(form.score, 'score'|trans|capitalize) }}
            </label>
            {{ form_errors(form.score) }}
            {{ form_widget(form.score) }}
        </div>

        <div class="form-group">
            <div>
                {{ form_widget(form.save_and_declare_other_players, {'attr': {'class': 'btn btn-primary'}}) }}
                {{ form_widget(form.save_and_stop, {'attr': {'class': 'btn btn-warning'}}) }}
                {{ form_widget(form.stop_without_saving_current_score, {'attr': {'class': 'btn btn-danger'}}) }}
            </div>
        </div>

        <div class="form-hidden-group">
            {{ form_widget(form.play) }}
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>

{% endblock %}

