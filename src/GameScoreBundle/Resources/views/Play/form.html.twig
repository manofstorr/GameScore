{% extends "GameScoreBundle::layout.html.twig" %}

{% block title %}
    {{ 'play' |trans|capitalize }} : {{ 'form' |trans|capitalize }} - {{ parent() }}
{% endblock %}

{% block mainsection %}
    <section class="col-md-offset-2 col-md-8">
        <h2>{{ 'form' |trans|capitalize }} : {{ 'play' |trans|capitalize }}</h2>

        <div class="well">
            <legend>{{ 'let\'s start by play, players will come soon'|trans|capitalize }}</legend>
            {{ form_start(form) }}

            <div class="form-group">
                <label for="date" class="control-label">
                    {{ form_label(form.date, 'date'|trans|capitalize) }}
                </label>
                {{ form_errors(form.date) }}
                {{ form_widget(form.date) }}
            </div>

            <div class="form-group">
                <label for="description" class="control-label">
                    {{ form_label(form.description, 'description'|trans|capitalize) }}
                </label>
                {{ form_errors(form.description) }}
                {{ form_widget(form.description) }}
            </div>

            <div class="form-group">
                <label for="location" class="control-label">
                    {{ form_label(form.location, 'location'|trans|capitalize) }}
                </label>
                {{ form_errors(form.location) }}
                {{ form_widget(form.location) }}
            </div>

            <div class="form-group">
                <label for="game" class="control-label">
                    {{ form_label(form.game, 'game'|trans|capitalize) }}
                </label>
                {{ form_errors(form.game) }}
                {{ form_widget(form.game) }}
            </div>

            <div class="form-group">
                <div>
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
                </div>
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}

