{% extends "GameScoreBundle::layout.html.twig" %}

{% block title %}
    Editeurs : Formulaire - {{ parent() }}
{% endblock %}

{% block rightside %}
    Editeurs populaires :
{% endblock %}

{% block mainsection %}
    <section class="col-md-8 col-md-offset-2 ">

        <label class="label label-xs label-gamescore-default"><span
                    class="glyphicon glyphicon-gift"></span> {{ 'editor'|trans|upper }}</label>
        <div class="well">
            <h2>{{ 'form' |trans|capitalize }} : {{ 'editor' |trans|capitalize }}</h2>
        </div>

        <div class="well">
        {{ form_start(form) }}

        <div class="form-group">
            <label for="name" class="control-label">
                {{ form_label(form.name, 'name'|trans|capitalize) }}
            </label>
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>

        <div class="form-group">
            <div>
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}

