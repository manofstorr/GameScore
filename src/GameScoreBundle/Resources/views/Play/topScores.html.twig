<ul class="list-group">
    <li class="list-group-item list-group-item-info">
        <h4>{{ 'top scores' |trans|capitalize }}</h4>
    </li>
{% if topScores %}
        {% for line in topScores %}
            <li class="list-group-item">
                {{ line.player.firstname ~ ' ' ~ line.player.lastname}}
                 :
                {{ line.score }}
            </li>
        {% endfor %}
{% endif %}
</ul>
