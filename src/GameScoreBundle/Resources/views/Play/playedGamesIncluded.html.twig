{% if mode is not defined %}
    {% set mode = 'view' %}
{% endif %}

{% if plays %}

        {%  if plays|length > 1 %}
            <label class="label label-gamescore-default"><span class="glyphicon glyphicon-tree-deciduous"></span> {{ 'Last played games'|trans|capitalize }}</label>
                   {% endif %}


    {% for play in plays %}
        {% include 'GameScoreBundle:Play:playedGameIncluded.html.twig' with {'play' : play, 'mode' : mode} %}
    {% endfor %}

    {% if nbOfPage is defined %}
        <ul class="pagination">
            {% for p in range(1, nbOfPages) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="#">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

{% endif %}

