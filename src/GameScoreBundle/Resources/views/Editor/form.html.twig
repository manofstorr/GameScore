{% extends "GameScoreBundle::layout.html.twig" %}

{% block title %}
    Editeurs : Formulaire - {{ parent() }}
{% endblock %}

{% block rightside %}
    Editeurs populaires :
{% endblock %}

{% block mainsection %}
    <section class="col-md-offset-2 col-md-8">
        <h2>{{ 'form'|trans|capitalize }} : {{ 'editor'|trans }}</h2>
        <div class="well">
            <legend>Remplissez tous les champs</legend>
        {{ form_start(form) }}

        <div class="form-group">
            <label for="name" class="control-label">
                {{ form_label(form.name, 'name'|trans|capitalize) }}
            </label>
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>

        <div class="form-group">
            <div>
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
            </div>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}

