{% if plays %}
    <div class="panel panel-info">
        <div class="panel-heading">
            {% if limitOfPlayedGamesShown is defined %}
                {{ limitOfPlayedGamesShown }}
            {% endif %}
            {{ 'Last played games'|trans|capitalize }} :
        </div>
        <ul class="list-group">
            {% for play in plays %}
                <li class="list-group-item">
                    <h4>
                        <a href="{{ path('game_score_game_view', {'id':play.game.id}) }}">{{ play.game.name }}</a>
                    </h4>
                    <p class="text-muted">{{ play.description }} @ {{ play.location }}
                        , {{ play.date|date("d M Y") }},
                        {{ play.nbPlayers }} joueurs

                        <a class="btn btn-default btn-xs pull-right"
                           href="{{ path('game_score_play_update', {'id': play.playid}) }}"
                           class="small">{{ 'update'|trans|capitalize }} {{ 'play'|trans }}</a>
                    </p>
                    <ul class="list-group">
                        {% if play.nbPlayers > 0 %}
                            {% for player in play.player %}
                                <li class="list-group-item">
                                    {{ player.firstname }} {{ player.lastname }}
                                    &nbsp;
                                    {% if loop.first %}
                                        <span class="label label-success">{{ player.score }}</span>
                                    {% else %}
                                        <span class="label label-info">{{ player.score }}</span>
                                    {% endif %}
                                    <div class="btn-group pull-right">
                                        <a href="{{ path('game_score_player_view', {'id': player.id}) }}"
                                           class="small">{{ 'see card'|trans|capitalize }}</a>
                                        &nbsp;|&nbsp;
                                        <a href="{{ path('game_score_score_update', {'id': player.scoreid}) }}"
                                           class="small">{{ 'update'|trans|capitalize }} {{ 'score'|trans }}</a>
                                    </div>
                                </li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </li>
            {% endfor %}
        </ul>
    </div>
    {% if nbOfPage is defined %}
        <ul class="pagination">
            {% for p in range(1, nbOfPages) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('game_score_player_view', {'id': player.id}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endif %}