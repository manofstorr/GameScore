{% extends "GameScoreBundle::general.layout.html.twig" %}

{% block title %}
    {{ 'editors'|trans|capitalize }} - {{ parent() }}
{% endblock %}

{% block mainsection %}
    <section class="col-md-10 col-md-offset-1">
        <label class="label label-xs label-gamescore-default"><span class="glyphicon glyphicon-gift"></span> {{ 'editor'|trans|upper }}</label>
        <div class="well">
            <h2>&nbsp;{{ 'editors'|trans|capitalize }}</h2>
            <hr/>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-default"
                   href="{{ path('game_score_editor_create') }}">{{ 'new'|trans|capitalize }}</a>
            {% endif %}

        </div>
        <ul class="pagination">
            {% for p in range(1, nbOfPages) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('game_score_editor_collection', {'page': p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
        <ul class="list-group">
            {% for editor in editorCollection %}
                <a href="{{ path('game_score_editor_view', { 'id':editor.id }) }}" class="list-group-item">
                    {{ editor.name }}
                    <span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span>
                </a>
            {% endfor %}
        </ul>
    </section>

{% endblock %}

