{% extends "GameScoreBundle::layout.html.twig" %}

{% block title %}
    {{ 'player' |trans|capitalize }} : {{ 'form' |trans|capitalize }} - {{ parent() }}
{% endblock %}

{% block rightside %}
    ?
{% endblock %}

{% block mainsection %}
    <section class="col-md-offset-2 col-md-8">
        <h2>{{ 'form' |trans|capitalize }} : {{ 'player' |trans|capitalize }}</h2>
        <div class="well">
            {{ form_start(form) }}

            <div class="form-group">
                <label for="firstname" class="control-label">
                    {{ form_label(form.firstname, 'firstname'|trans|capitalize) }}
                </label>
                {{ form_errors(form.firstname) }}
                {{ form_widget(form.firstname) }}
            </div>

            <div class="form-group">
                <label for="lastname" class="control-label">
                    {{ form_label(form.lastname, 'lastname'|trans|capitalize) }}
                </label>
                {{ form_errors(form.lastname) }}
                {{ form_widget(form.lastname) }}
            </div>

            <div class="form-group">
                <label for="lastname" class="control-label">
                    {{ form_label(form.star, 'star'|trans|capitalize) }}
                </label>
                {{ form_errors(form.star) }}
                {{ form_widget(form.star) }}
            </div>

            <div class="form-group">
                <div>
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-block'}}) }}
                </div>
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}

        </div>
    </section>
{% endblock %}

