{% extends "GameScoreBundle::layout.html.twig" %}

{% block title %}
    {{ 'editors'|trans|capitalize }} - {{ parent() }}
{% endblock %}

{% block mainsection %}
    <section class="col-md-12">
        <h2><i class="fa fa-address-book" aria-hidden="true"></i>&nbsp;{{ 'editors'|trans|capitalize }}</h2>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-primary"
               href="{{ path('game_score_editor_create') }}">{{ 'new'|trans|capitalize }}</a>
        {% endif %}
        <hr/>
        <ul class="pagination">
            {% for p in range(1, nbOfPages) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('game_score_editor_collection', {'page': p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
        <ul class="list-group">
            {% for editor in editorCollection %}
                <a href="{{ path('game_score_editor_view', { 'id':editor.id }) }}" class="list-group-item">
                    {{ editor.name }}
                    <i class="fa fa-chevron-right pull-right" aria-hidden="true"></i>
                </a>
            {% endfor %}
        </ul>
    </section>

{% endblock %}

