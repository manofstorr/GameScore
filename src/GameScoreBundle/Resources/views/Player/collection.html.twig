{% extends "GameScoreBundle::layout.html.twig" %}


{% block title %}
    Joueurs : Collection - {{ parent() }}
{% endblock %}

{% block rightside %}
    ?
{% endblock %}

{% block mainsection %}
    <h2>Joueurs : collection</h2>
    <p>
        <a href="{{ path('game_score_player_create') }}">Nouveau joueur</a>
    </p>
    <ul class="pagination">
        {% for p in alphapageArray %}
            <li{% if p == page %} class="active"{% endif %}>
                <a href="{{ path('game_score_player_collection', {'page': p}) }}">{{ p }}</a>
            </li>
        {% endfor %}
    </ul>
    <ul>
        {% for player in playerCollection %}
            <li>
                {{ player.firstname ~ ' ' ~ player.lastname }}
                {% if player.star %}
                    &nbsp;&#9733;
                {% endif %}</h2>
                -
                <a href="{{ path('game_score_player_view', { 'player_id':player.id }) }}">Fiche</a>
                -
                <a href="{{ path('game_score_player_update', { 'player_id':player.id }) }}">Maj</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}