<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %} GameScore {% endblock %}</title>
    {% block stylesheets %}
        {% stylesheets
        filter='cssrewrite'
        'bundles/gamescore/css/bootstrap.css'
        'bundles/gamescore/css/overload.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css"/>
        {% endstylesheets %}
    {% endblock %}
</head>

<body>
{% for message in app.session.flashbag.get('info') %}
    <div class="alert alert-info fade in">
        <a href="#" class="close" data-dismiss="alert">×</a>
        {{ message }}
    </div>
{% endfor %}
<nav class="navbar navbar-inverse navbar-fixed-top">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        Connecté en tant que {{ app.user.username }}
        -
        <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
    {% else %}
        <a href="{{ path('fos_user_security_login') }}">Connexion</a>
        -
        <a href={{ path ('fos_user_registration_register') }}>S'enregistrer</a>
    {% endif %}
</nav>
<header class="page-header">
    <h1>Game scores</h1>
    <p>
    <blockquote>An easy way to store and keep your games and matches</blockquote>
    <em>Propelled by Symfony 3</em>
    </p>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-default active" href="{{ path('game_score_homepage') }}">Home</a>
            <a class="btn btn-default" href="{{ path('game_score_game_collection', {page: 'A'}) }}">Les
                jeux<span
                        class="badge">{{ service_game.getTotalNumberOfGames() }}</span></a>
            <a class="btn btn-default" href="{{ path('game_score_author_collection') }}">Les auteurs</a>
            <a class="btn btn-default" href="{{ path('game_score_editor_collection', {page: 1}) }}">Les
                éditeurs</a>
            <a class="btn btn-default" href="{{ path('game_score_player_collection', {page: 'a'}) }}">Les
                joueurs</a>
            <a class="btn btn-default" href="{{ path('user_collection') }}">Les utilisateurs</a>
            <a class="btn btn-default" href="{{ path('game_score_play_create') }}">Nouvelle partie</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            side
        </div>
        <section class="col-md-8">
            {% block body %}
            {% endblock %}
        </section>
    </div>


</div>
<hr/>
<footer>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-4">
            <address>
                <p>contact : david(dot)baudry(at)zoho(dot)com</p>
            </address>
        </div>
        <div class="col-md-4">
            <p>Copyright {{ 'now'|date('Y') }} - enviro {{ app.environment|upper }}</p>
        </div>
        <div class="col-md-2"></div>
    </div>

</footer>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>
</html>